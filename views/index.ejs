<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>

    <div><a href="new">Add New Message</a></div>
    <hr />
    <br />

    <main>
      <h2>Messages</h2>
      <ul>
        <% messages.forEach(message => { %>
        <li>
          <p>
            &nbsp; <%= message.username %> &nbsp;
            <a
              href="messages/<%= message.id %>"
              rel="noreferrer"
              target="_blank">
              open
            </a>
          </p>
        </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
